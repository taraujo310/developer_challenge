<p id="notice"><%= notice %></p>

<div id="post-presenter">
  <h2 class='title'><%= @post.title %></h2>
  <p class='excerpt'><%= @post.body[0..250] %></p>

  <p class='author'>Por <%= @post.author_name %></p>

  <div class="image">
    <%= image_tag @post.image.url %>
  </div>

  <div class="separator"></div>
  <h3 class='subtitle'><%= @post.subtitle %></h3>

  <p class='body'>
    <%= @post.body.gsub('\n', '<br />') %>
  </p>
</div>
